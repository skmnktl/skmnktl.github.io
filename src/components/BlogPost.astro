---
interface Props {
  title: string;
  description: string;
  date: Date;
  url: string;
  tags?: string[];
}

const { title, description, date, url, tags = [] } = Astro.props;
---

<article class="blog-post-preview">
  <header>
    <h2 class="title">
      <a href={url}>{title}</a>
    </h2>
    <time datetime={date.toISOString()}>
      {date.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
    </time>
  </header>
  <p>{description}</p>
  {tags.length > 0 && (
    <div class="tags">
      {tags.map(tag => (
        <span class="tag">{tag}</span>
      ))}
    </div>
  )}
</article>

<style>
  .blog-post-preview {
    margin-bottom: 2rem;
    padding: 1.5rem;
    border: 1px solid #eee;
    border-radius: 8px;
  }

  .title {
    margin: 0;
  }

  .title a {
    color: inherit;
    text-decoration: none;
  }

  .title a:hover {
    text-decoration: underline;
  }

  time {
    color: #666;
    font-size: 0.9rem;
  }

  .tags {
    margin-top: 1rem;
  }

  .tag {
    display: inline-block;
    padding: 0.2rem 0.5rem;
    margin-right: 0.5rem;
    background-color: #f0f0f0;
    border-radius: 4px;
    font-size: 0.8rem;
  }
</style>
